OLLAMA_URL=http://127.0.0.1:11434
OLLAMA_MODEL=llama3.1:8b-instruct-q4_K_M
DEFAULT_MODEL=llama3.1:8b-instruct-q4_K_M
OLLAMA_TIMEOUT=90

# --- Server ---
HOST=0.0.0.0
PORT=8000
ENVIRONMENT=development

# --- Auth (replace in real .env; use strong 32+ char values) ---
API_KEY=replace_me
JWT_SECRET_KEY=replace_me_please_change_this

# --- Database (SQLite by default) ---
PLATFORM_DB_PATH=./data/platform.db
DATABASE_URL=sqlite:///./data/platform.db
# If running in Docker, these resolve to /app:
# PLATFORM_DB_PATH=/app/data/platform.db
# DATABASE_URL=sqlite:////app/data/platform.db

# --- CORS (list ALL frontends you actually use) ---
ALLOWED_ORIGINS=https://ai.therisehub.org,http://localhost:3000,http://localhost:5173

# --- Optional web search (leave blank to disable cleanly) ---
SEARCH_PROVIDER=
BING_API_KEY=
GOOGLE_API_KEY=

# --- Optional model routing (JSON map). Example:
# ERGO_MODEL_MAP={"math:basic":"llama3.1:8b-instruct-q4_K_M","science":"llama3.1"}
ERGO_MODEL_MAP=
# Memory turns to retain per user (0 disables)
ERGO_MEMORY_TURNS=6

# --- Optional decoding controls ---
ERGO_TEMPERATURE=0.2
ERGO_TOP_P=0.95
ERGO_MAX_TOKENS=512
ERGO_SEED=0
